#!/bin/bash

# Need: SERVERS, CLIENTS, ROUTER, USER, CCNX_DIR,
#       NAMELIST_DIR, NAMELIST, NAMELIST_PREFIX
#       UNIQUE, CCNDC_PROTO, CCNDC_FLAG, CCNDC_PORT

source stopall

echo "Run ccndstart on router(local).."
cd ${CCNX_DIR}
make

echo "Preparing all servers.."
for ip in $SERVERS
do
	echo "  working on: ${ip}"
	# for each server..
	#   build code
	ssh ${USER}@${ip} "
		cd ${CCNX_DIR}
		make
	"
	echo "  done on : ${ip}"
done 

echo "Preparing all clients.."
for ip in $CLIENTS
do
	echo "  working on: ${ip}"
	# for each client..
	#   build code
	ssh ${USER}@${ip} "
		cd ${CCNX_DIR}
		make
	"
	echo "  done on : ${ip}"
done

echo "All done."
